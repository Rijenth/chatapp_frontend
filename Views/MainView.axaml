<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DCDesktop.ViewModels"
             x:Class="DCDesktop.Views.MainView"
             x:DataType="vm:MainViewModel">

    <UserControl.DataContext>
        <vm:MainViewModel />
    </UserControl.DataContext>

    <Grid>

        <!-- Coin haut gauche : cube avec nom d'utilisateur -->
        <Border Width="100"
                Height="40"
                Background="#2E1065"
                CornerRadius="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20">
            <TextBlock Text="{Binding Username}"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Bold" />
        </Border>

        <!-- Zone centrale avec les boutons -->
        <StackPanel Margin="20"
                    Spacing="16"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="250">

            <Button Content="PUBLIC"
                    Width="200"
                    Height="45"
                    Background="#FFFFFF"
                    Foreground="#2E1065"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderBrush="#2E1065"
                    BorderThickness="1"
                    CornerRadius="8"
                    Command="{Binding PublicCommand}"
                    />

            <Button Content="CONTACTS"
                    Width="200"
                    Height="45"
                    Background="#FFFFFF"
                    Foreground="#2E1065"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderBrush="#2E1065"
                    BorderThickness="1"
                    CornerRadius="8"
                    Command="{Binding ContactCommand}"
                    />

            <Button Content="DÃ‰CONNEXION"
                    Width="200"
                    Height="45"
                    Background="#FFFFFF"
                    Foreground="#2E1065"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderBrush="#2E1065"
                    BorderThickness="1"
                    CornerRadius="8"
                    Command="{Binding LogoutCommand}" />

        </StackPanel>
    </Grid>
</UserControl>