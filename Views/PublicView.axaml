<UserControl 
            xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DCDesktop.ViewModels"
             xmlns:components="clr-namespace:DCDesktop.Views.Components"
             x:Class="DCDesktop.Views.PublicView"
             x:DataType="vm:PublicViewModel">

    <UserControl.DataContext>
        <vm:PublicViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Colonne gauche -->
        <StackPanel Grid.Column="0"
                    Background="#F3EFEC"
                    HorizontalAlignment="Center">

            <components:UserBadge />

            <!-- Zone scrollable avec hauteur limitée -->
            <ScrollViewer MaxHeight="400">
                <StackPanel>
                    <ListBox ItemsSource="{Binding Channels}"
                             Background="#F3EFEC"
                             BorderThickness="0"
                             SelectionMode="Single"
                             ScrollViewer.VerticalScrollBarVisibility="Hidden"
                             MaxHeight="400">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="#FFFFFF"
                                    BorderThickness="1"
                                    BorderBrush="#D1C4E9"
                                    CornerRadius="6"
                                    Margin="4"
                                    Padding="8"
                                    Click="OnChannelClicked">
                                    <!-- Style personnalisé pour garder le fond blanc au survol -->
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#FFFFFF" />
                                        </Style>
                                        <Style Selector="Button:pressed /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#FFFFFF" />
                                        </Style>
                                    </Button.Styles>
                                    <TextBlock Text="{Binding Name}" FontSize="14" Foreground="#2E1065" />
                                </Button>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
            <!-- Bouton Retour -->
            <Button Content="Retour"
                    Command="{Binding GoBackMainCommand}"
                    Width="160"
                    Height="40"
                    Margin="0 10 0 0"
                    Background="Transparent"
                    BorderBrush="#2E1065"
                    Foreground="#2E1065"
                    FontWeight="Normal"
                    FontSize="16"
                    BorderThickness="1"
                    CornerRadius="8"
                    HorizontalAlignment="Left"
            />
        </StackPanel>

        <!-- Colonne droite -->
        <Border Grid.Column="1" Background="White">
            <Grid>
                <TextBlock Text="{Binding SelectedChannel.Id, StringFormat='Channel ID: {0}'}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2E1065"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           IsVisible="{Binding SelectedChannel, Converter={x:Static ObjectConverters.IsNotNull}}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>