<UserControl 
            xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DCDesktop.ViewModels"
             xmlns:components="clr-namespace:DCDesktop.Views.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="DCDesktop.Views.PublicView"
             x:DataType="vm:PublicViewModel"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:PublicViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Colonne gauche -->
        <StackPanel Grid.Column="0"
                    Background="#F3EFEC"
                    HorizontalAlignment="Center">

            <components:UserBadge />

            <!-- Zone scrollable avec hauteur limitée -->
            <ScrollViewer MaxHeight="400">
                <StackPanel>
                    <ListBox ItemsSource="{Binding Channels}"
                             Background="#F3EFEC"
                             BorderThickness="0"
                             SelectionMode="Single"
                             ScrollViewer.VerticalScrollBarVisibility="Hidden"
                             MaxHeight="400">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="#FFFFFF"
                                    BorderThickness="1"
                                    BorderBrush="#D1C4E9"
                                    CornerRadius="6"
                                    Margin="4"
                                    Padding="8"
                                    Click="OnChannelClicked">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#FFFFFF" />
                                        </Style>
                                        <Style Selector="Button:pressed /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#FFFFFF" />
                                        </Style>
                                    </Button.Styles>
                                    <TextBlock Text="{Binding Name}" FontSize="14" Foreground="#2E1065" />
                                </Button>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Bouton Créer un channel -->
            <Button Content="Créer un channel"
                    Command="{Binding ShowCreateChannelDialogCommand}"
                    Width="160"
                    Height="40"
                    Margin="0 10 0 0"
                    Background="#2E1065"
                    BorderBrush="#2E1065"
                    Foreground="White"
                    FontWeight="Normal"
                    FontSize="16"
                    BorderThickness="1"
                    CornerRadius="8"
                    HorizontalAlignment="Left" />

            <!-- Bouton Retour -->
            <Button Content="Retour"
                    Command="{Binding GoBackMainCommand}"
                    Width="160"
                    Height="40"
                    Margin="0 10 0 0"
                    Background="Transparent"
                    BorderBrush="#2E1065"
                    Foreground="#2E1065"
                    FontWeight="Normal"
                    FontSize="16"
                    BorderThickness="1"
                    CornerRadius="8"
                    HorizontalAlignment="Left" />
        </StackPanel>

        <!-- Colonne droite -->
        <Border Grid.Column="1" Background="White">
            <Grid>
                <!-- Message d'erreur -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="13"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                
                <TextBlock Text="{Binding SelectedChannel.Id, StringFormat='Channel ID: {0}'}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2E1065"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           IsVisible="{Binding SelectedChannel, Converter={x:Static ObjectConverters.IsNotNull}}" />
            </Grid>
        </Border>

        <!-- Modal pour créer un channel -->
        <Grid IsVisible="{Binding IsCreateChannelDialogVisible}"
              Background="#80000000"
              Grid.ColumnSpan="2">
            <Border Background="White"
                    Width="300"
                    Height="200"
                    CornerRadius="8"
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="10">
                    <TextBlock Text="Créer un nouveau channel"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    
                    <TextBox Watermark="Nom du channel"
                             Text="{Binding NewChannelName}" />
                    
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="10">
                        <Button Content="Annuler"
                                Command="{Binding CancelCreateChannelCommand}"
                                Width="100"
                                Background="Transparent"
                                BorderBrush="#2E1065"
                                Foreground="#2E1065" />
                                
                        <Button Content="Créer"
                                Command="{Binding CreateChannelCommand}"
                                Width="100"
                                Background="#2E1065"
                                Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>